                @if (!Model.IsLoggedIn)
                {
                <li class="nav-item">
                    <a class="nav-item nav-link" href="@Url.AppendModulePrefixToRouteName("C.BvnValidation")">Generate State Tin</a>
                </li>
                }
                @if (Model.ShowSignin)
                {
                    if (Model.IsLoggedIn)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle loggedIn" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="text-transform:capitalize">@Model.DisplayText</a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown" style="max-height:400px;overflow:auto">
