@model Parkway.CBS.Module.Web.ViewModels.UploadCellSiteVM

@{
    Layout.Title = "Upload Cell Site";

    Script.Require("CBS.Popper.Script").AtFoot();
    Script.Require("CBS.Bootstrap4.Script").AtFoot();
    Script.Require("CBS.Main.Script").AtFoot();
    Script.Require("OSGOF.Cell.Sites.Script").AtFoot();
    Script.Require("OSGOF.Cell.Sites.Upload.Client.Script").AtFoot();
    Style.Require("CBS.Bootstrap");
    Style.Require("CBS.Style.Main");
    Style.Require("CBS.Style.Pages");
}
@Html.Partial("Partials\\HeaderPartial", Model.HeaderObj)

<div class="wrapper-payment">
    <div class="top-banner alt">
        <div class="banner-bottom">
            <h3>Upload Cell Sites</h3>
        </div>
    </div>
    <div class="container breadcrumbs">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href=@Href("~/")>Home</a></li>
                <li class="breadcrumb-item active">Upload Cell Sites</li>
            </ol>
        </nav>
    </div>
    @Html.Partial("Partials\\FlashPartial", Model.ErrorMessage)
    <div class="content-payment">
        <div class="container form-container">
            @using (Html.BeginRouteForm("C.AddCellSite.Upload", FormMethod.Post, new { @id = "fileForm", @name = "fileForm", @class = "main-form payment-form big", @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <h4 class="upload-info">Upload Cell Site Details</h4>
                <label class="upload-label" for="upload">
                    <span style="font-size: xx-large;font-weight: lighter;" id="fileName"></span>
                    <img src="@Url.Content(Html.ThemePath(WorkContext.CurrentTheme, "/Styles/images/upload-black.svg"))" alt="" id="uploadImg" />
                    <span class="upload-caption" id="uploadInfo">Add cell site schedule file here.</span>
                </label>
                <input type="file" id="upload" name="cellsitesfile" accept=".xls,.xlsx">
                <span class="upload-caption">Don’t have your file? Download cell site schedule <a href="/Media/Sample_Excel_File_Cell_Upload.xlsx">sample excel template</a></span>
                <input type="hidden" class="form-control mb-4 border-0" name="PayerId" value="@Model.PayerId" required>
                <button class="btn generate-upload" disabled id="fileUploadbtn">Proceed</button>
            }
        </div>
    </div>
    <div class="footer-top">

    </div>
    @Html.Partial("Partials\\FooterPartial")
</div>
