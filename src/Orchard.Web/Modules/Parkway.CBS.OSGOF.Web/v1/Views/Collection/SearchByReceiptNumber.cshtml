@model Parkway.CBS.Module.Web.ViewModels.SearchByReceiptNumberVM

@{
    Layout.Title = "Search For Receipt";

    Script.Require("CBS.Popper.Script").AtFoot();
    Script.Require("CBS.Bootstrap4.Script").AtFoot();
    Script.Require("CBS.Main.Script").AtFoot();

    Style.Require("CBS.Bootstrap");
    Style.Require("CBS.Style.Main");
    Style.Require("CBS.Style.Pages");
}
    @Html.Partial("Partials\\HeaderPartial", Model.HeaderObj)

    <div class="wrapper-payment">
        <div class="top-banner alt">
            <div class="banner-bottom" @*style="background-image:@("url(" + Url.Content(Html.ThemePath(WorkContext.CurrentTheme, "/Styles/images/banner-top.png")) + ")")"*@>
                <h3>Search For Receipt</h3>
            </div>
        </div>
        <div class="container breadcrumbs">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                </ol>
            </nav>
        </div>
        <div class="content-payment">
            @if (Model.HasErrors)
            {
                @Html.Partial("Partials\\FlashPartial", Model.ErrorMessage)
            }
            <div class="container form-container">
                @using (Html.BeginRouteForm("Receipt.Search", FormMethod.Post, new { @class = "main-form payment-form" }))
                {
                    @Html.AntiForgeryToken()
                    <label for="" class="title">Bank3D Receipt Number (BRN) <span data-toggle="tooltip" data-placement="right" data-html="true" title="<p>The Bank3D Receipt Number (BRN) is a unique number that is systematically assigned to each invoice payment generated on the instant revenue platform.</p><p>This number identifies each payment on the platform.</p><img src='/media/images/invoice.png' alt=''>">What is this?</span></label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control mb-4 border-0" name="ReceiptNumber" placeholder="Enter BRN" value="@Model.ReceiptNumber" required>
                        <div class="input-group-append">
                            <button class="btn btn-orange" type="submit">Enter</button>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="footer-top" @*style="background-image:@("url(" + Url.Content(Html.ThemePath(WorkContext.CurrentTheme, "/Styles/images/footer-bg.png")) + ")")"*@>

        </div>
        @Html.Partial("Partials\\FooterPartial")
    </div>
<script>
    $("#closeFlash").click(function (e) {
        $("#errorFlash").fadeOut("slow");
    });
</script>