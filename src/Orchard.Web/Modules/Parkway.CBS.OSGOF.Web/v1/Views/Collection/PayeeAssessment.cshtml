@model Parkway.CBS.Core.HelperModels.InvoiceProceedVMForPayeAssessment

@{
    Layout.Title = "Payee Assessment";

    Script.Require("CBS.Popper.Script").AtFoot();
    Script.Require("CBS.Bootstrap4.Script").AtFoot();
    Script.Require("CBS.Main.Script").AtFoot();
    Script.Require("Payee.Script").AtFoot();

    Style.Require("CBS.Bootstrap");
    Style.Require("CBS.Style.Main");
    Style.Require("CBS.Style.Pages");
}
@Html.Partial("Partials\\HeaderPartial", Model.InvoiceProceedVM.HeaderObj)

<div class="wrapper-payment">
    <div class="top-banner alt">
        <div class="banner-bottom" @*style="background-image:@("url(" + Url.Content(Html.ThemePath(WorkContext.CurrentTheme, "/Styles/images/banner-top.png")) + ")")"*@>
            <h3>Paye Assessment</h3>
        </div>
    </div>
    <div class="container breadcrumbs">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="@Url.RouteUrl("C.SelfAssessment")">Select Identity</a></li>
                <li class="breadcrumb-item active" aria-current="page">Add Paye Assessment</li>
            </ol>
        </nav>
    </div>
    @if (Model.InvoiceProceedVM.HasMessage)
    {
        <div id="infoFlashMsg" class="container alert-msg" style="background-color:#d4edda;">
            <small class="message" style="color:#155724;"><small style="white-space: pre-wrap;">@Model.InvoiceProceedVM.Message</small></small>
        </div>
    }
    <div class="content-payment">
        <div class="container form-container">
            <div class="details">
                <h1>Employer Details</h1>
                <p class="top-info">You are <b>@Model.InvoiceProceedVM.CategoryName</b> generating an invoice for <b>@Model.InvoiceProceedVM.RevenueHeadName bill (MDA - @Model.InvoiceProceedVM.MDAName)</b>. <br> Kindly fill the rest of the form to proceed.</p>

                <div class="row">
                    <div class="col-md-3">
                        <p class="til">Name</p>
                        <p class="ans">@Model.InvoiceProceedVM.TaxEntityViewModel.Recipient</p>
                    </div>
                    <div class="col-md-3">
                        <p class="til">Payer ID</p>
                        <p class="ans">@Model.InvoiceProceedVM.TaxEntityViewModel.PayerId</p>
                    </div>
                    <div class="col-md-3">
                        <p class="til">Phone</p>
                        <p class="ans">@Model.InvoiceProceedVM.TaxEntityViewModel.PhoneNumber</p>
                    </div>
                    <div class="col-md-3">
                        <p class="til">TIN</p>
                        <p class="ans">@Model.InvoiceProceedVM.TaxEntityViewModel.TaxPayerIdentificationNumber</p>
                    </div>
                </div>
            </div>
            <hr class="default-hr">

            <nav class="pay-nav-two mb-4">
                <div class="nav justify-content-center" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link a active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Add employee</a>
                    <a class="nav-item nav-link b" id="nav-upload-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Upload File</a>
                </div>
                <span class="pay-up-info"><span>i</span>You can either use the onscreen form or file upload to input employee details</span>
            </nav>

            <div class="pay-nav-two-content tab-content" id="nav-tabContent">
                <div class="tab-pane active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    <div class="row">
                        <div class="col-md-4">
                            <h3 class="mb-4">Employee Details</h3>
                        </div>
                    </div>
                    <div id="loginErrorFlash" class="container alert-msg" style="display:none">
                        <small class="message"><span id="closeModalFlash" style="float:right;">&times;</span><small id="loginErrorMsg" style="white-space: pre-wrap;">error</small></small>
                    </div>
                    @using (Html.BeginForm("", "", FormMethod.Post, new { @id = "lineForm", @name = "lineForm", @class = "main-form payment-form big" }))
                    {
                        <div class="row">
                            <div class="col-md-4">
                                <label for="" class="title">Tax Payer Name <small style="color:red; font-weight:bolder">*</small></label>
                                <input type="text" class="form-control mb-4" id="TaxPayerName" placeholder="Enter Name" required>
                            </div>
                            <div class="col-md-4">
                                <label for="" class="title">Tax Payer TIN</label>
                                <input type="text" class="form-control mb-4" id="TIN" placeholder="Enter TIN">
                            </div>
                            <div class="col-md-4">
                                <label for="" class="title">Gross Annual Earnings <small style="color:red; font-weight:bolder">*</small></label>
                                <input type="number" class="form-control mb-4" id="GrossAnnualEarning" placeholder="Enter" min="1" step="0.01" required>
                            </div>
                            <div class="col-md-4">
                                <label for="" class="title">Exemptions (Annual) <small style="color:red; font-weight:bolder">*</small></label>
                                <input type="number" class="form-control mb-4" id="Exemptions" min="0" placeholder="Enter" step="0.01" required>
                            </div>
                            <div class="col-md-4">
                                <label for="" class="title">Paye Month <small style="color:red; font-weight:bolder">*</small></label>
                                <select class="custom-select mb-4" id="Month" required>
                                    <option selected disabled value="">Select a Month</option>
                                    <option value="Jan">January</option>
                                    <option value="Feb">February</option>
                                    <option value="Mar">March</option>
                                    <option value="Apr">April</option>
                                    <option value="May">May</option>
                                    <option value="Jun">June</option>
                                    <option value="Jul">July</option>
                                    <option value="Aug">August</option>
                                    <option value="Sep">September</option>
                                    <option value="Oct">October</option>
                                    <option value="Nov">November</option>
                                    <option value="Dec">December</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="" class="title">Paye Year <small style="color:red; font-weight:bolder">*</small></label>
                                <select class="custom-select mb-4" id="Year" required>
                                    <option selected disabled value="">Select a year</option>
                                    <option value="2018">2018</option>
                                    <option value="2017">2017</option>
                                    <option value="2016">2016</option>
                                    <option value="2016">2015</option>
                                    <option value="2016">2014</option>
                                    <option value="2016">2013</option>
                                    <option value="2016">2012</option>
                                    <option value="2016">2011</option>
                                    <option value="2016">2010</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="" class="title">LGA of Residence <small style="color:red; font-weight:bolder">*</small></label>
                                <select class="custom-select mb-4" id="LGA" required>
                                    <option selected disabled value="">Select an LGA</option>
                                    @foreach (var item in Model.StateLGAs)
                                    {
                                        <option value="@item.Value">@item.Key</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="" class="title">Phone Number <small style="color:red; font-weight:bolder">*</small></label>
                                <input type="number" class="form-control mb-4" placeholder="Enter Phone Number" id="PhoneNumber" min="11" required>
                            </div>
                            <div class="col-md-4">
                                <label for="" class="title">Email</label>
                                <input type="email" class="form-control mb-4" placeholder="Enter Email" id="Email">
                            </div>
                            <div class="col-md-8">
                                <label for="" class="title">Residential Address <small style="color:red; font-weight:bolder">*</small></label>
                                <input type="text" class="form-control mb-4" placeholder="Enter Address" id="Address" required>
                            </div>
                            <div class="col-md-4">
                                <label for="" class="title">&nbsp;</label>
                                <button type="submit" class="btn" style="font-size: 20px;">+ ADD</button>
                            </div>
                        </div>
                    }
                    <hr class="default-hr">
                    @using (Html.BeginForm("PayeeAssessmentOnScreenInput", "Collection", FormMethod.Post, new { @id = "dataForm", @name = "dataForm" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="table-responsive" id="formData">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Tax Payer Name</th>
                                        <th scope="col">Tax payer TIN</th>
                                        <th scope="col">Gross Annual Earnings</th>
                                        <th scope="col">Exemptions (Annual)</th>
                                        <th scope="col">Paye Month/year</th>
                                        <th scope="col">LGA & Email</th>
                                        <th scope="col">Phone number</th>
                                        <th scope="col">Address</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="tbody"></tbody>
                            </table>
                        </div>
                        <button class="btn generate-upload" id="dataFormSubmitBtn" disabled>Proceed</button>
                    }
                </div>

                <div class="tab-pane" id="nav-profile" role="tabpanel" aria-labelledby="nav-upload-tab">
                    @using (Html.BeginForm("PayeeAssessmentFileUpload", "Collection", FormMethod.Post, new { @id = "fileForm", @name = "fileForm", @class = "main-form payment-form big", @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4 class="upload-info">Upload Employee Details</h4>
                        <label class="upload-label" for="upload">
                            <span style="font-size: xx-large;font-weight: lighter;" id="fileName"></span>
                            <img src="@Url.Content(Html.ThemePath(WorkContext.CurrentTheme, "/Styles/images/upload-black.svg"))" alt="" id="uploadImg" />
                            <span class="upload-caption" id="uploadInfo">Add an employee schedule file here.</span>
                            @*<span class="upload-caption">Drag and drop employee schedule file here or, <a href="#">browse</a> your computer.</span>*@
                        </label>
                        <input type="file" id="upload" name="assessmentfile" accept=".xls,.xlsx">
                        <span class="upload-caption">Don’t have your file? Download employee schedule <a href="/Media/Sample_Excel_File.xlsx">sample excel template</a></span>

                        <button class="btn generate-upload" disabled id="fileUploadbtn">Proceed</button>
                    }
                </div>

            </div>
        </div>
    </div>

    <div class="footer-top" @*style="background-image:@("url(" + Url.Content(Html.ThemePath(WorkContext.CurrentTheme, "/Styles/images/footer-bg.png")) + ")")"*@>

    </div>
    @Html.Partial("Partials\\FooterPartial")
</div>
