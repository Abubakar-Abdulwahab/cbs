                        <div class="divTableCell">&nbsp;<input name="FixedBill.MonthlyBill.Months" type="checkbox" value="@Parkway.CBS.Core.Models.Enums.Months.March" @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.Months != null && Model.FixedBill.MonthlyBill.Months.Contains(@Parkway.CBS.Core.Models.Enums.Months.March)?"checked":"" ) />March</div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell">&nbsp;<input name="FixedBill.MonthlyBill.Months" type="checkbox" value="@Parkway.CBS.Core.Models.Enums.Months.April"  @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.Months != null && Model.FixedBill.MonthlyBill.Months.Contains(@Parkway.CBS.Core.Models.Enums.Months.April)?"checked":"" ) />April</div>
                        <div class="divTableCell">&nbsp;<input name="FixedBill.MonthlyBill.Months" type="checkbox" value="@Parkway.CBS.Core.Models.Enums.Months.May" @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.Months != null && Model.FixedBill.MonthlyBill.Months.Contains(@Parkway.CBS.Core.Models.Enums.Months.May)?"checked":"" ) />May</div>
                        <div class="divTableCell">&nbsp;<input name="FixedBill.MonthlyBill.Months" type="checkbox" value="@Parkway.CBS.Core.Models.Enums.Months.June" @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.Months != null && Model.FixedBill.MonthlyBill.Months.Contains(@Parkway.CBS.Core.Models.Enums.Months.June)?"checked":"" ) />June</div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell">&nbsp;<input name="FixedBill.MonthlyBill.Months" type="checkbox" value="@Parkway.CBS.Core.Models.Enums.Months.July" @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.Months != null && Model.FixedBill.MonthlyBill.Months.Contains(@Parkway.CBS.Core.Models.Enums.Months.July)?"checked":"" ) />July</div>
                        <div class="divTableCell">&nbsp;<input name="FixedBill.MonthlyBill.Months" type="checkbox" value="@Parkway.CBS.Core.Models.Enums.Months.August" @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.Months != null && Model.FixedBill.MonthlyBill.Months.Contains(@Parkway.CBS.Core.Models.Enums.Months.August)?"checked":"" ) />August</div>
                        <div class="divTableCell">&nbsp;<input name="FixedBill.MonthlyBill.Months" type="checkbox" value="@Parkway.CBS.Core.Models.Enums.Months.September" @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.Months != null && Model.FixedBill.MonthlyBill.Months.Contains(@Parkway.CBS.Core.Models.Enums.Months.September)?"checked":"" ) />September</div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell">&nbsp;<input name="FixedBill.MonthlyBill.Months" type="checkbox" value="@Parkway.CBS.Core.Models.Enums.Months.October" @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.Months != null && Model.FixedBill.MonthlyBill.Months.Contains(@Parkway.CBS.Core.Models.Enums.Months.October)?"checked":"" ) />October</div>
                        <div class="divTableCell">&nbsp;<input name="FixedBill.MonthlyBill.Months" type="checkbox" value="@Parkway.CBS.Core.Models.Enums.Months.November" @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.Months != null && Model.FixedBill.MonthlyBill.Months.Contains(@Parkway.CBS.Core.Models.Enums.Months.November)?"checked":"" ) />November</div>
                        <div class="divTableCell">&nbsp;<input name="FixedBill.MonthlyBill.Months" type="checkbox" value="@Parkway.CBS.Core.Models.Enums.Months.December" @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.Months != null && Model.FixedBill.MonthlyBill.Months.Contains(@Parkway.CBS.Core.Models.Enums.Months.December)?"checked":"" )/>December</div>
                    </div>
                </div>
            </div>
        </div>


     

        <div id="f_week">
            <label class="control-label">Repeat every: </label>
            <select class="recurring_control form-control yearweek" id="f_week_select" name="FixedBill.MonthlyBill.WeekDay">
                <option value="" selected disabled>Select What Day</option>
                <option value="@Parkway.CBS.Core.Models.Enums.WeekDays.FirstDayOfTheMonth" @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.WeekDay == Parkway.CBS.Core.Models.Enums.WeekDays.FirstDayOfTheMonth?"selected":"")>First day of the month</option>
                <option value="@Parkway.CBS.Core.Models.Enums.WeekDays.FirstWeekDayOfTheMonth" @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.WeekDay == Parkway.CBS.Core.Models.Enums.WeekDays.FirstWeekDayOfTheMonth?"selected":"")>First week day of the month</option>
                <option value="@Parkway.CBS.Core.Models.Enums.WeekDays.FirstDay" @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.WeekDay == Parkway.CBS.Core.Models.Enums.WeekDays.FirstDay?"selected":"")>First day of selected (day))</option>
                <option value="@Parkway.CBS.Core.Models.Enums.WeekDays.SecondDay" @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.WeekDay == Parkway.CBS.Core.Models.Enums.WeekDays.SecondDay?"selected":"")>Second day of the selected (day)</option>
                <option value="@Parkway.CBS.Core.Models.Enums.WeekDays.ThirdDay" @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.WeekDay == Parkway.CBS.Core.Models.Enums.WeekDays.ThirdDay?"selected":"")>Third day of selected (day)</option>
                <option value="@Parkway.CBS.Core.Models.Enums.WeekDays.LastDay" @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.WeekDay == Parkway.CBS.Core.Models.Enums.WeekDays.LastDay?"selected":"")>Last day of selected (day)</option>
                <option value="@Parkway.CBS.Core.Models.Enums.WeekDays.LastDayOfWeekDayOfTheMonth" @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.WeekDay == Parkway.CBS.Core.Models.Enums.WeekDays.LastDayOfWeekDayOfTheMonth?"selected":"")>Last week day of the week</option>
                <option value="@Parkway.CBS.Core.Models.Enums.WeekDays.LastDayOfTheMonth" @(Model.FixedBill != null && Model.FixedBill.MonthlyBill != null && Model.FixedBill.MonthlyBill.WeekDay == Parkway.CBS.Core.Models.Enums.WeekDays.LastDayOfTheMonth?"selected":"")>Last day of the month</option>
            </select>
            @Html.Hint(T("Select day of the  the amount payable. For example {0}.", "10000"))
            <span>Week(s)</span>
        </div>

