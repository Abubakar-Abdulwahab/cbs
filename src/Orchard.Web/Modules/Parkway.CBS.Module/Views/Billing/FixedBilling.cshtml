<div class="fixed_billing">
    <div class="form-group col-md-4">
        <div id="f_start">
            <label class="control-label">Starts On: </label>
            <input type="text" name="FixedBill.StartFrom" id="datepicker3" value="@Model.FixedBill.StartFrom" />
            <input type="time" name="FixedBill.StartTime" value="@Model.FixedBill.StartTime" />
        </div>@Html.ValidationMessageFor(m => m.FixedBill.StartFrom, "", new { @style = "color:#ff0000" })
        <div id="f_year">
            <label class="control-label">Repeat every: </label>
