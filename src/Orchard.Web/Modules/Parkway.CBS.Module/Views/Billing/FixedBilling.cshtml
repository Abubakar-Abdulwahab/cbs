        <div id="f_day_number">
            <label class="control-label" style="margin-top:10px;">Every: </label>
            <input type="number" name="FixedBill.DailyBill.Interval" value="@Model.FixedBill.DailyBill.Interval" min="0" />
            <br />
            <span>Day(s)</span>
        </div>

        <div id="f_day_dropdown">
