@model ParkWay.CBS.Module.ViewModels.TaxPayersViewModel

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
@{
    ViewBag.Title = "CustomerTransactions";
}

<h2>Tax Payers</h2>


@{

    Style.Require("CBS.MDA.Style.BootStrap");
    Style.Require("Style.Datepicker");
    Style.Require("CBS.MDA.Style.Assesment");

    Script.Require("CBS.MDA.BootstrapDatepicker.Script");
    Script.Require("CBS.MDA.Bootstrap.Script");
    Script.Require("CBS.MDA.BillingDatepicker.Script");
    Script.Require("CBS.MDA.AssessmentDatePicker.Script");

}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
        </div>
        <form class="form-inline">
            <div class="col-md-12 text-center">
                @*<div class="form-group">
                        From
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar" aria-hidden="true"></i>
                            </div>
                            <input type="text" placeholder="click to show datepicker" class="form-control pickyDate" />
                        </div>
                    </div>*@
                @*<div class="form-group">
                        To
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar" aria-hidden="true"></i>
                            </div>
                            <input type="text" placeholder="click to show datepicker" class="form-control pickyDate" />
                        </div>
                    </div>*@
                @*<div class="form-group">
                        <select class="form-control selectBox">
                            <option>Select MDA</option>
                            <option>Ministry of Budget and Planning</option>
                            <option>Ministry of Aviation</option>
                            <option>Ministry of Education</option>
                            <option>Ministry of Finance</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select class="form-control selectBox">
                            <option>Select Revenue Head</option>
                            <option>Ministry of Budget and Planning</option>
                            <option>Ministry of Aviation</option>
                            <option>Ministry of Education</option>
                            <option>Ministry of Finance</option>
                        </select>
                    </div>*@
            </div>
            <div class="col-md-12 text-center secondrow">

                <div class="form-group">
                    <input class="form-control" name="tinorrin" id="tinorrin" value="@Model.tinorrin" placeholder="Enter TIN Number" />
                </div>
                @*<div class="form-group">
                        <input class="form-control" placeholder="Enter Invoice Number" />
                    </div>*@
                <button class="btn btn-default">Search</button>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="table-responsive">
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th>
                                CUSTOMER NAME
                            </th>
                            <th>
                                CUSTOMER TYPE
                            </th>
                            <th>
                                DATE CREATED
                            </th>
                            <th>
                                CUSTOMER TIN
                            </th>

                            <th></th>
                        </tr>

                    </thead>
                    <tbody>

                        @if (Model.TaxPayers != null && Model.TaxPayers.Count() > 0)
                        {
                            foreach (var item in Model.TaxPayers)
                            {
                                <tr>
                                    <td>@item.CustomerName</td>
                                    <td>@item.CustomerType</td>
                                    <td>@item.DateCreated</td>
                                    <td>@item.Tin</td>
                                    <td> @Html.ActionLink("View Transactions", "CustomerTransactions", "Report", new { area = "ParkWay.CBS.Module", tinorrin = item.Tin }, new { @class = "btn btn-sm btn-info" })</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">No records found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

        </div>
    </div>
</div>
