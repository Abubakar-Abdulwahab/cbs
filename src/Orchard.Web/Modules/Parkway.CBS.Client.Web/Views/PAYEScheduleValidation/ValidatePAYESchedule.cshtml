@model Parkway.CBS.Core.HelperModels.HeaderObj

@{
    Layout.Title = "Validate PAYE Schedule";

    Script.Require("CBS.Popper.Script").AtFoot();
    Script.Require("CBS.Bootstrap4.Script").AtFoot();
    Script.Require("CBS.Main.Script").AtFoot();

    Style.Require("CBS.Bootstrap");
    Style.Require("CBS.Style.Main");
    Style.Require("CBS.Style.Pages");
}
@Html.Partial("Partials\\HeaderPartial", Model)

<div class="wrapper-payment">
    <div class="top-banner alt">
        <div class="banner-bottom">
            <h3>Validate PAYE Schedule</h3>
        </div>
    </div>
    <div class="container breadcrumbs">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
            </ol>
        </nav>
    </div>
    <div class="content-payment">
        <div class="container form-container">
            @using (Html.AppendModulePrefixToFormRouteName(Parkway.CBS.Client.Web.RouteName.PAYEScheduleValidation.ValidatePAYESchedule, FormMethod.Post, new { @class = "main-form payment-form" }))
            {
                @Html.AntiForgeryToken()
                <label for="" class="title">PAYE Schedule ID </label>
                <div class="input-group mb-3">
                    <input type="text" class="form-control mb-4 border-0" name="batchRef" placeholder="Enter Schedule ID" required>
                    <div class="input-group-append">
                        <button class="btn btn-orange" type="submit">Enter</button>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="footer-top">
    </div>
    @Html.Partial("Partials\\FooterPartial")
</div>
