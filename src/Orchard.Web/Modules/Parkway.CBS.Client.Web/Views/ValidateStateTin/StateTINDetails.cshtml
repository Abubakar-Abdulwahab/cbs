@model Parkway.CBS.Core.HelperModels.StateTINValidationVM

@{
    Layout.Title = "State TIN Details";
    Script.Require("CBS.Popper.Script").AtFoot();
    Script.Require("CBS.Bootstrap4.Script").AtFoot();
    Script.Require("CBS.Main.Script").AtFoot();
    Script.Require("CBS.MakePayment.Script").AtFoot();

    Style.Require("CBS.Bootstrap");
    Style.Require("CBS.Style.Main");
    Style.Require("CBS.Style.Pages");
}

@Html.Partial("Partials\\HeaderPartial", Model.HeaderObj)

<div class="wrapper-payment">
    @Html.AntiForgeryToken()
    <div class="top-banner alt">
        <div class="banner-bottom">
            <h3>State TIN Details</h3>
        </div>
    </div>
    <div class="container breadcrumbs">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">State TIN Details</li>
            </ol>
        </nav>
    </div>
    <div class="content-payment">
        @if (Model.HasErrors)
        {
            <div id="infoFlashMsg" class="container alert-msg" style="background-color:#d4edda;">
                <small class="message" style="color:#155724;"><small style="white-space: pre-wrap; padding:10px 10px 10px 10px">@Model.ErrorMessage</small></small>
            </div>
        }


        <div class="container form-container">
            <div class="main-form payment-form big">

                <h3 class="form-title">
                    <span>State TIN: @Model.StateTIN</span>
                </h3>
                <div class="row pl-4 pr-4">
                    <div class="col-md-3">
                        <p class="til">Name</p>
                        <p class="ans">@Model.StateTINViewModel.Name</p>
                    </div>
                    <div class="col-md-3">
                        <p class="til">Phone</p>
                        <p class="ans">@Model.StateTINViewModel.PhoneNumber</p>
                    </div>
                    <div class="col-md-3">
                        <p class="til">TIN</p>
                        <p class="ans">@Model.StateTINViewModel.TIN</p>
                    </div>
                    <div class="col-md-3">
                        <p class="til">State TIN</p>
                        <p class="ans">@Model.StateTIN</p>
                    </div>
                    <div class="col-md-3">
                        <p class="til">Email</p>
                        <p class="ans">@Model.StateTINViewModel.Email</p>
                    </div>
                    <div class="col-md-3">
                        <p class="til">Address</p>
                        <p class="ans">@Model.StateTINViewModel.Address</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-top"></div>
    @Html.Partial("Partials\\FooterPartial")
</div>
