@model Parkway.CBS.Core.HelperModels.StateTINValidationVM

@{
    Layout.Title = "Validate StateTin";

    Script.Require("CBS.Popper.Script").AtFoot();
    Script.Require("CBS.Bootstrap4.Script").AtFoot();
    Script.Require("CBS.Main.Script").AtFoot();
    Style.Require("CBS.Bootstrap");
    Style.Require("CBS.Style.Main");
    Style.Require("CBS.Style.Pages");
}

@Html.Partial("Partials\\HeaderPartial", Model.HeaderObj)

<div class="wrapper-payment">
    <div class="top-banner alt">
        <div class="banner-bottom">
            <h3>Search For State Tax Identification Number</h3>
        </div>
    </div>
    <div class="container breadcrumbs">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
            </ol>
        </nav>
    </div>
    <div class="content-payment">
        @if (Model.HasErrors)
        {
            @Html.Partial("Partials\\FlashPartial", Model.ErrorMessage)
        }
        <div class="container form-container">
            @using (Html.AppendModulePrefixToFormRouteName("C.ValidateStateTin", FormMethod.Post, new { @class = "main-form payment-form" }))
            {
                @Html.AntiForgeryToken()
            <label for="" class="title">State TIN (State Tax Identification Number)</label>
                <div class="input-group mb-3">
                    <input type="text" class="form-control mb-4 border-0" name="StateTIN" placeholder="Enter State TIN" value="@Model.StateTIN" required>
                    <div class="input-group-append">
                        <button class="btn btn-orange" type="submit">Enter</button>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="footer-top">

    </div>
    @Html.Partial("Partials\\FooterPartial")
</div>
<script>
    $("#closeFlash").click(function (e) {
        $("#errorFlash").fadeOut("slow");
    });
</script>
