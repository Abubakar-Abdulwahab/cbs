@model Parkway.CBS.Core.HelperModels.PAYENoSchedule

@{
    Layout.Title = "PAYE No Schedule Option";

    Script.Require("CBS.Popper.Script").AtFoot();
    Script.Require("CBS.Bootstrap4.Script").AtFoot();
    Script.Require("CBS.Main.Script").AtFoot();

    Style.Require("CBS.Bootstrap");
    Style.Require("CBS.Style.Main");
    Style.Require("CBS.Style.Pages");


}
@Html.Partial("Partials\\HeaderPartial", Model.HeaderObj)
<div class="wrapper-payment">
    <div class="top-banner alt">
        <div class="banner-bottom">
            <h3>Select PAYE Option</h3>
        </div>
    </div>
    <div class="container breadcrumbs">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">PAYE No Schedule</li>
            </ol>
        </nav>
    </div>
    <div class="content-payment">
        <div class="container form-container">
            @using (Html.AppendModulePrefixToFormRouteName(Parkway.CBS.Client.Web.RouteName.PAYENoSchedule.NoScheduleOption, FormMethod.Post, new { @class = "main-form payment-form" }))
            {
                @Html.AntiForgeryToken()
                <h3 class="form-title">Kindly enter the PAYE Tax amount to proceed</h3>
                <div class="col-md-6  mb-4">
                    <div>
                        <input type="text" name="SAmount" class="form-control mb-2 mr-sm-2" style="margin-left:0px" placeholder="Enter an amount" id="amountDue" value="@String.Format("{0:n2}", @Model.SAmount)" required>
                        @Html.ValidationMessageFor(m => m.SAmount, "", new { @class = "tiny-caption", @style = "color:#ff0000" })
                        <p><small>Enter the amount you wish to pay</small></p>
                    </div>
                </div>
                <div>Please note you will be required to upload the PAYE Tax schedule later. The Bank3D receipt number will be required during the upload.</div>

                <button type="submit" id="proceedbtn" class="btn">Proceed</button>
            }
        </div>
    </div>
    <div class="footer-top"/>
    @Html.Partial("Partials\\FooterPartial")
</div>


