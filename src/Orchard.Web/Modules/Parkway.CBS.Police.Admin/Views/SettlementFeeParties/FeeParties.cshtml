@model Parkway.CBS.Police.Core.VM.SettlementFeePartiesVM

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
@{
    Layout.Title = T("Settlement Fee Parties").ToString();

    Style.Require("CBS.MDA.Style.BootStrap");
    Style.Require("Style.Datepicker");
    Style.Require("CBS.MDA.Style.Assesment");
    Style.Require("CBS.Report.Reset.Pagination");

    Script.Require("CBS.MDA.BootstrapDatepicker.Script");
    Script.Require("CBS.MDA.Bootstrap.Script");
    Script.Require("CBS.MDA.AssessmentDatePicker.Script");
}

<div class="zone zone-messages">
    <div class="message message-Error" id="errorFlash" style="display:none"></div>
</div>
@using (Html.BeginFormAntiForgeryPost())
{
    <div class="container-fluid">
        <div class="row" style="padding-bottom:10px">
            <div class="col-md-3">
            </div>
            <div class="col-md-3">
            </div>
            <div class="col-md-3">
            </div>
            <div class="col-md-3">
                <a class="btn btn-primary" style="width:100%" href="@Url.Action("AddFeeParty", "SettlementFeeParties")">Add</a>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    SETTLEMENT PARTY NAME
                                </th>
                                <th>
                                    ACCOUNT NUMBER
                                </th>
                                <th>
                                    BANK CODE
                                </th>
                                @*<th>
                                    ACTIONS
                                </th>*@
                            </tr>
                        </thead>
                        <tbody style="background-color:#EEEEEE;">
                            @if (Model.FeeParties != null && Model.FeeParties.Count() > 0)
                            {
                                foreach (var item in Model.FeeParties)
                                {
                                    <tr>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.AccountNumber
                                        </td>
                                        <td>
                                            @item.BankCode
                                        </td>
                                        @*<td>
                                            <a href="#" target="_blank">Edit details</a>
                                        </td>*@
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4">No Records Found</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

@Display(Model.Pager)

