@{ 
    Script.Require("PSS.PCC.Document.Upload.Preview.Partial.Script");
}
<style>
    .document-preview-modal-container {
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 11;
        top:0;
        background-color: rgba(9,16,39,0.71);
        overflow:auto;
        padding:20px;
        display:none;
    }

    .document-preview-modal-content{
        height: auto;
        max-width: 700px;
        background-color:#ffffff;
        border-radius: 10px 10px 10px 10px;
        padding:15px;
        margin: 0 auto;
    }

    .document-preview-modal-content img{
        display:none;
        margin: 0 auto;
        width:100%;
        height:auto;
    }

    .document-preview-modal-content embed{
        display:none;
        margin: 0 auto;
        width:100%;
        height:auto;
        min-height:240px;
    }
</style>
<div class="document-preview-modal-container">
    <div class="document-preview-modal-content">
        <img id="documentPreviewImg" class="py-2" src=""  />
        <embed id="documentPreviewEmbed" src=""  />
        <button class="btn blue-btn-full-outline btn-block" id="documentPreviewModalCloseBtn">Close</button>
    </div>
</div>