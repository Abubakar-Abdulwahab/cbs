
@{ 
    Script.Require("PSS.PCC.Document.Upload.Confirmation.Modal.Script");
}
<style>
    .document-upload-confirmation-modal-container {
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 11;
        top: 0;
        background-color: rgba(9,16,39,0.71);
        overflow: auto;
        padding: 20px;
        display:none;
    }

    .document-upload-confirmation-modal-content {
        height: auto;
        max-width: 700px;
        background-color: #ffffff;
        border-radius: 10px 10px 10px 10px;
        padding: 15px;
        margin: 0 auto;
    }

    .confirm-image-upload-container{
        display:flex;
        flex-flow:row nowrap;
        justify-content:center;
    }

    img.confirm-image-upload {
        width: 100%;
        max-width:200px;
        height: 180px;
        max-height:200px;
        border-radius: 4px 4px 4px 4px;
    }

    .sample-image-overlay{
        position:absolute;
        top:0;
        bottom:0;
        left:0;
        right:0;
        background-color:rgba(0,0,0,0.1);
        border-radius:4px 4px 4px 4px;
        max-width:200px;
    }

    .sample-image-overlay label{
        transform: rotate(43deg);
        position: absolute;
        top: 79px;
        left: 9px;
        opacity:0.3;
    }
</style>
<div class="document-upload-confirmation-modal-container">
    <div class="document-upload-confirmation-modal-content">
        <div class="row">
            <div class="col-6 py-1 confirm-image-upload-container">
                <div style="text-align:center">
                    <h6>Uploaded Image</h6>
                    <img src="" class="confirm-image-upload" id="imageUploaded" />
                </div>
            </div>
            <div class="col-6 py-1 confirm-image-upload-container">
                <div style="text-align:center;position:relative">
                    <h6>Sample Image</h6>
                    <img src="/media/images/passport_sample_image.jpeg" class="confirm-image-upload" id="sampleImage" />
                    <span class="sample-image-overlay"><label>Sample Image</label></span>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-12" id="confirmPassportDatapageUploadContainer">
                <p style='color:#212529;margin:0'>Kindly note that acceptable passport photographs are:</p>
                <ul style='color:#212529;padding-left:20px'>
                    <li>Submit a color photo, taken within the last 6 months</li>
                    <li>Use a clear image of your face. Do not use filters commonly used on social media</li>
                    <li>Have someone else take your photo, No selfies</li>
                    <li>Take off your eyeglasses for your photo</li>
                    <li>Use plain white or off-white background</li>
                    <li>No face mask(s)</li>
                    <li>No headscarf</li>
                    <li>The applicant’s ear must be visible</li>
                    <li>Full face without smiles</li>
                </ul>
            </div>
        </div>
        <div class="row mx-0 px-0">
            <div class="col-12">
                <div class="form-group form-check" style="display:flex; flex-direction:row; justify-content:center">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" id="imageUploadCondition" style="position:relative">
                        I confirm that the above image conforms to the requirements listed
                    </label>
                </div>
            </div>
            <div class="col-6 py-1 pl-0">
                <button type="button" class="btn blue-btn-full-outline" id="closeConfirmModalBtn">Cancel</button>
            </div>
            <div class="col-6 py-1 pr-0" style="text-align:right">
                <button type="button" class="btn blue-btn-full" id="proceedConfirmModalBtn" disabled>Proceed</button>
            </div>
        </div>
    </div>
</div>