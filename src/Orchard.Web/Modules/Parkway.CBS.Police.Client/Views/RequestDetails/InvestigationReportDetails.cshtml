@model Parkway.CBS.Police.Core.VM.ExtractDetailsVM

@{
    Layout.Title = "Investigation Report Details";
    Script.Require("CBS.Popper.Script").AtFoot();
    Script.Require("CBS.Bootstrap4.Script").AtFoot();

    Style.Require("CBS.Bootstrap");
    Style.Require("CBS.NPF.Main");
    Script.Require("CBS.npf.extract.details.Script").AtFoot();
}

<style>
    .transparent {
        opacity: 0;
    }
</style>

<div id="verify-account-one">
    @Html.Partial("Partials\\HeaderPartial", Model.HeaderObj)

    <div class="container-fluid request-details-main-content no-margin no-padding">

        <div class="container request-details-content-container">
            <div class="container request-details-content no-padding">
                <div class="container-fluid no-padding">
                    <h5>CUSTOMER INFORMATION</h5>
                    <div class="container-fluid no-padding">
                        <div class="row no-padding">
                            <div class="col-md-3 pb-1">
                                <label class="no-margin grey-label" for="name">Name</label>
                                <p class="bolded-info" id="name">@Model.TaxEntity.Recipient</p>
                            </div>
                            <div class="col-md-3 pb-1">
                                <label class="no-margin grey-label" for="phoneNumber">Phone Number</label>
                                <p class="bolded-info" id="phoneNumber">@Model.TaxEntity.PhoneNumber<p/>
                            </div>
                            <div class="col-md-3 pb-1">
                                <label class="no-margin grey-label" for="email">Email Address</label>
                                <p class="bolded-info" id="email">@Model.TaxEntity.Email<p/>
                            </div>
                            <div class="col-md-3 pb-1">
                                <label class="no-margin grey-label" for="tin">TIN</label>
                                <p class="bolded-info" id="tin">@Model.TaxEntity.TaxPayerIdentificationNumber<p/>
                            </div>
                            
                        </div>
                        <div class="row no-padding">
                            <div class="col-md-3 pb-1">
                                <label class="no-margin grey-label" for="rcNumber">RC Number</label>
                                <p class="bolded-info" id="rcNumber">@Model.TaxEntity.RCNumber<p />
                            </div>
                            <div class="col-md-3 pb-1">
                                <label class="no-margin grey-label" for="state">Select State</label>
                                <p class="bolded-info" id="state">@Model.TaxEntity.SelectedStateName</p>
                            </div>
                            <div class="col-md-3 pb-1">
                                <label class="no-margin grey-label" for="lga">Select LGA</label>
                                <p class="bolded-info" id="lga">@Model.TaxEntity.SelectedLGAName</p>
                            </div>
                            <div class="col-md-3 pb-1">
                                <label class="no-margin grey-label" for="address">Address</label>
                                <p class="bolded-info" id="address">@Model.TaxEntity.Address</p>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <h5>DETAILS OF INVESTIGATION REPORT</h5>
                    <div class="container-fluid no-padding">
                        <div class="row no-padding">
                            <div class="col-md-8 pb-1">
                                <label class="no-margin grey-label" for="addressB">Reason for Investigation Report</label>
                                <p class="bolded-info" id="extractReason">@Model.ExtractInfo.Reason</p>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <h5>Police command to provide the service</h5>
                    <div class="container-fluid no-padding">
                        <div class="row no-padding">
                            <div class="col-md-3 pb-1">
                                <label class="no-margin grey-label" for="stateC">State</label>
                                <p class="bolded-info" id="stateC">@Model.ExtractInfo.StateName</p>
                            </div>
                            <div class="col-md-3 pb-1">
                                <label class="no-margin grey-label" for="lgaC">LGA</label>
                                <p class="bolded-info" id="lgaC">@Model.ExtractInfo.LGAName</p>
                            </div>
                            <div class="col-md-3 pb-1">
                                <label class="no-margin grey-label" for="srchCmd">Search Command</label>
                                <p class="bolded-info" id="srchCmd">@Model.ExtractInfo.CommandName</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("Partials\\FooterPartial")
</div>

