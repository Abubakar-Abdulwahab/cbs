@model Parkway.CBS.Police.Core.VM.ForgotPasswordVM

@{
    Layout.Title = "Forgot Password";

    Script.Require("CBS.Popper.Script").AtFoot();
    Script.Require("CBS.Bootstrap4.Script").AtFoot();

    Style.Require("CBS.Bootstrap");
    Style.Require("CBS.NPF.Main");
}

<div>
    @Html.Partial("Partials\\HeaderPartial", Model.HeaderObj)

    <div class="container-fluid forgot-password-main-content no-margin no-padding">

        <div class="container forgot-password-content-container">
            @if (Model.FlashObj != null)
            {
            <div class="container" style="max-width:500px; padding:0">
                @Html.Partial("Partials\\Flash", Model.FlashObj)
            </div>
            }

            <div class="container-fluid forgot-password-content no-padding">
                @using (Html.BeginRouteForm("P.Forgot.Password", FormMethod.Post, new { @id = "forgotPasswordForm", @name = "forgotPasswordForm" }))
                {
                        @Html.AntiForgeryToken()
                    <div class="container-fluid no-padding mb-3 forgot-password-header">
                       <img src="@Url.Content(Html.ThemePath(WorkContext.CurrentTheme,"/Styles/images/confirmEmail.svg"))" class="img img-responsive mb-2" />
                       <h5 class="mb-1">Confirm Your Email</h5>
                       <small class="text-muted">A verification code will be sent to the specified email address.</small>
                   </div>
               <div class="container-fluid no-padding forgot-password-body">
                   <div class="form-group">
                       <input type="email" class="form-control" placeholder="Email" name="Email" id="email" value="@Model.Email" required/>
                       <small class="form-text text-muted">Please enter your email.</small>
                       <div class="container-fluid validation-msg no-padding">@Html.ValidationMessage("Email", new { @class = "tiny-caption", @style = "color:#ff0000" })</div>
                   </div>
                   <button type="submit" class="btn btn-block blue-btn">Proceed</button>
               </div>
                }
            </div>
        </div>
    </div>
    @Html.Partial("Partials\\FooterPartial")
</div>



