@{
    Layout.Title = "Security";

    Script.Require("CBS.Popper.Script").AtFoot();
    Script.Require("CBS.Bootstrap4.Script").AtFoot();

    Style.Require("CBS.Bootstrap");
    Style.Require("CBS.NPF.Main");
}

<div id="user-profile-security-content-one">
    @Html.Partial("Partials\\HeaderPartial")
    <div class="container-fluid user-profile-security-main-content no-margin no-padding">

        <div class="container-fluid user-profile-security-container">
            <div class="container user-profile-security-form-container">
                <div class="container-fluid">
                    <h4>User Profile</h4>
                </div>
                <div class="row no-margin no-padding">
                    <div class="container col-3 no-margin no-padding">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a href="#" class="nav-link">User Info</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">Requests</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">Notifications</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link active">Security</a>
                            </li>
                        </ul>
                    </div>
                    <div class="container col-9 no-margin no-padding">
                        <div class="container-fluid">
                            <h4>Reset Password</h4>
                        </div>
                        <form>
                            <div class="row no-margin no-padding">
                                <div class="col">
                                    <label for="oldPwd">Old Password</label>
                                    <input type="password" class="form-control" placeholder="Enter Old Password" id="oldPwd" />
                                </div>
                            </div>
                            <div class="row no-margin no-padding">
                                <div class="col">
                                    <label for="newPwd">New Password</label>
                                    <input type="password" class="form-control" placeholder="Enter New Password" id="newPwd" />
                                </div>
                            </div>
                            <div class="row no-margin no-padding">
                                <div class="col">
                                    <label for="confirmNewPwd">Confirm New Password</label>
                                    <input type="password" class="form-control" placeholder="Enter New Password" id="confirmNewPwd" />
                                </div>
                            </div>
                            <div class="container-fluid">
                                <button type="button" class="btn">Save Changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



    @Html.Partial("Partials\\FooterPartial")
</div>
