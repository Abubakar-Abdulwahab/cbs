@{
    Layout.Title = "Verify Account";

    Script.Require("CBS.Popper.Script").AtFoot();
    Script.Require("CBS.Bootstrap4.Script").AtFoot();
    Script.Require("CBS.npf.main.Script").AtFoot();
    Style.Require("CBS.Bootstrap");
    Style.Require("CBS.NPF.Main");
}

<div id="verify-account-one">
    @Html.Partial("Partials\\HeaderPartial")

    <div class="container-fluid verify-account-main-content no-margin no-padding">
        <div class="container verify-account-content-container">
            <div class="container verify-account-alert-bar">
                <div class="row no-padding no-margin">
                <div class="container col-2 verified-icon-container no-margin no-padding">
                    <img src="@Url.Content(Html.ThemePath(WorkContext.CurrentTheme,"/Styles/images/checkedGreenTwo.svg"))" class="img img-responsive">
                    </div>
                <div class="container col-10 no-margin no-padding verified-icon-details">
                    <h5>Account Created!</h5>
                    <p>Kindly verify your account to continue.</p>
                    <p>Your username is 09043524352</p>
                    <span class="delete-verified-alert-icon">
                        <img src="@Url.Content(Html.ThemePath(WorkContext.CurrentTheme,"/Styles/images/delete.svg"))" class="img img-responsive">
                    </span>
                    </div>
                </div>
                </div>
            <div class="container verify-account-content no-padding">
                <div class="container no-padding">
                    <h4>Account Verification</h4>
                    <p class="tip-text">Kindly enter the secret code sent to your phone number.</p>
                    <p>"09098987898"</p>
                    <form>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Enter secret code"/>
                            <p>Didn’t receive a code? <a href="#">Resend code</a></p>
                        </div>
                        
                        <button type="button" class="btn btn-block">Verify Account</button>
                        </form>
                    </div>
                </div>
            </div>
    </div>



    @Html.Partial("Partials\\FooterPartial")
</div>



