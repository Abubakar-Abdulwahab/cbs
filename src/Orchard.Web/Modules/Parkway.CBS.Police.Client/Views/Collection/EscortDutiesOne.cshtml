@{
    Layout.Title = "Escort Duties";

    Script.Require("CBS.Popper.Script").AtFoot();
    Script.Require("CBS.Bootstrap4.Script").AtFoot();

    Style.Require("CBS.Bootstrap");
    Style.Require("CBS.NPF.Main");
}

<div id="escort-content-one">
    @Html.Partial("Partials\\HeaderPartial")

    <div class="container-fluid escort-duties-main-content no-margin no-padding">
        <div class="container-fluid breadcrumb-nav">
            <ul class="nav justify-content-center escort-nav-list">
                <li class="nav-item">
                    <span class="checked-task"><img src="@Url.Content(Html.ThemePath(WorkContext.CurrentTheme,"/Styles/images/checkedGreen.svg"))"/></span>
                    <a href="#" class="nav-link">Select Service</a>
                    
                </li>
                <li class="nav-item">
                    <span style="float:right;transform:rotate(-90deg)"><img src="@Url.Content(Html.ThemePath(WorkContext.CurrentTheme,"/Styles/images/arrowDown.svg"))" class="right-arrow-icon"/></span>
                    </li>
                <li class="nav-item">
                    <span class="small-active-circle"></span>
                    <a href="#" class="nav-link active-link">Fill Request Form</a>
                </li>
                <li class="nav-item">
                    <span style="float:right;transform:rotate(-90deg)"><img src="@Url.Content(Html.ThemePath(WorkContext.CurrentTheme,"/Styles/images/arrowDown.svg"))" class="right-arrow-icon"/></span>
                </li>
                <li class="nav-item">
                    <span class="small-circle"></span>
                    <a href="#" class="nav-link">Confirm Details and Submit Request</a>
                </li>
                <li class="nav-item">
                    <span style="float:right;transform:rotate(-90deg)"><img src="@Url.Content(Html.ThemePath(WorkContext.CurrentTheme,"/Styles/images/arrowDown.svg"))" class="right-arrow-icon"/></span>
                </li>
                <li class="nav-item">
                    <span class="small-circle"></span>
                    <a href="#" class="nav-link">Make Payment</a>
                </li>
                </ul>
            </div>
        <div class="container-fluid escort-duties-container">
            <div class="container escort-duties-form-container">
                <div class="row no-margin no-padding">
                    <div class="container col-md-6 no-padding escort-duties-form">
                        <div class="container escort-heading-container-one no-padding no-margin"><h4>ESCORT & SPECIAL PROTECTION SERVICES</h4></div>
                        <h6 class="grey-tip">Fill in your details of your request.</h6>
                        <div class="row no-margin no-padding escort-duties-nav-list-form">
                            <div class="container no-margin no-padding">
                                <span class="small-blue-circle"></span>
                                <p>Customer&nbsp;Info</p>
                            </div>
                            <div class="container dashed-block no-margin no-padding">
                                <div style="border:0.5px dashed #E3E3E3"></div>
                            </div>
                            <div class="container no-margin no-padding">
                                <span class="small-filled-circle"></span>
                                <p>Form 1</p>
                            </div>
                            <div class="container dashed-block no-margin no-padding">
                                <div style="border:0.5px dashed #E3E3E3"></div>
                            </div>
                            <div class="container no-margin no-padding">
                                <span class="small-filled-circle"></span>
                                <p>Form 2</p>
                            </div>
                            </div>
                        <form>
                            <div class="input-group form-group">
                                <div class="container-fluid no-padding"><label for="fullname">Full Name</label></div>
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <img src="@Url.Content(Html.ThemePath(WorkContext.CurrentTheme,"/Styles/images/user.svg"))" />
                                    </div>
                                </div>
                                <input type="text" class="form-control" placeholder="Enter full name" id="fullname"/>
                                </div>
                            <div class="input-group form-group">
                                <div class="container-fluid no-padding"><label for="phonenumber">Phone Number</label></div>
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <img src="@Url.Content(Html.ThemePath(WorkContext.CurrentTheme,"/Styles/images/phone.svg"))" />
                                    </div>
                                </div>
                                <input type="text" class="form-control" placeholder="Enter phone number" id="phonenumber" />
                            </div>
                            <div class="input-group form-group">
                                <div class="container-fluid no-padding"><label for="email">Email</label></div>
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <img src="@Url.Content(Html.ThemePath(WorkContext.CurrentTheme,"/Styles/images/letter.svg"))" />
                                    </div>
                                </div>
                                <input type="text" class="form-control" placeholder="Enter email address" id="email" />
                            </div>
                            <div class="form-group">
                                <label for="rcnumber">RC Number <span class="grey-tip">(optional)</span></label>
                                <input type="text" class="form-control" placeholder="Enter RC Number" id="rcnumber" />
                            </div>
                            <div class="form-group">
                                <label for="tin">Tax Identification Number <span class="grey-tip">(optional)</span></label>
                                <input type="text" class="form-control" placeholder="Enter TIN" id="tin" />
                            </div>
                            <div class="form-group">
                                <label for="state">State</label>
                                <input type="text" class="form-control" placeholder="Select a State" id="state" spellcheck="false" autocomplete="off" list="states"/>
                                <datalist name="states" id="states">
                                    <option data-value="Lagos" value="lagos">Lagos</option>
                                </datalist>
                            </div>
                            <div class="form-group">
                                <label for="lga">Local Government Area</label>
                                <input type="text" class="form-control" placeholder="Select an lga" id="lga" list="lgas" spellcheck="false" autocomplete="off"/>
                                <datalist name="lgas" id="lgas">
                                    <option data-value="Yaba" value="yaba">Yaba</option>
                                </datalist>
                            </div>
                            <div class="form-group">
                                <label for="address">Address</label>
                                <input type="text" class="form-control" placeholder="Enter your address" id="address" />
                            </div>
                            <button type="button" class="btn btn-block">Proceed</button>
                            </form>
                    </div>
                    <div class="container col-md-6 escort-duties-form-container-details">
                        <div class="container escort-duties-details">
                            <div class="container-fluid no-padding no-margin">
                                <h4>Please Note:</h4>
                            </div>
                            <ul>
                                <li><div class="li-disc"> <div class="li-inner-disc"></div> </div> <p>will required to pay a non-refundable application fee.</p></li>
                                <li><div class="li-disc"> <div class="li-inner-disc"></div> </div> <p>The Nigerian Police Force reserves the right to approval or deny your request based on it’s guidelines or availability of officers.</p></li>
                                <li><div class="li-disc"> <div class="li-inner-disc"></div> </div> <p>All Police Offers on Escort duty are to be treated with the utmost respect. Any complaint of been mistreated will be liable to fines.</p> </li>
                            </ul>
                            </div>
                    </div>
                    </div>
                </div>
            </div>
    </div>
    

    
     @Html.Partial("Partials\\FooterPartial")
</div>
