@{
    Layout.Title = "Proflie";

    Script.Require("CBS.Popper.Script").AtFoot();
    Script.Require("CBS.Bootstrap4.Script").AtFoot();

    Style.Require("CBS.Bootstrap");
    Style.Require("CBS.NPF.Main");
}

<div id="user-profile-content-one">
    @Html.Partial("Partials\\HeaderPartial")
    <div class="container-fluid user-profile-main-content no-margin no-padding">
        
        <div class="container-fluid user-profile-container">
            <div class="container user-profile-form-container">
                <div class="container-fluid">
                    <h4>User Profile</h4>
                    </div>
                <div class="row no-margin no-padding">
                    <div class="container col-3 no-margin no-padding">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a href="#" class="nav-link active">User Info</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">Requests</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">Notifications</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">Security</a>
                            </li>
                            </ul>
                    </div>
                    <div class="container col-9 no-margin no-padding">
                        <div class="container-fluid">
                            <div class="row no-margin no-padding">
                                <div class="col-2 user-img">
                                </div>
                                <div class="col-10">
                                    <p>Parkway Projects</p>
                                    <p>Username: 09098987876</p>
                                </div>
                            </div>
                            </div>
                        <form>
                            <div class="row no-margin no-padding">
                                <div class="col">
                                    <label for="fullname">Full Name</label>
                                    <input type="text" class="form-control" placeholder="Enter Fullname" id="fullname"/>
                                </div>
                                <div class="col">
                                    <label for="phoneNumber">Phone Number</label>
                                    <input type="text" class="form-control" placeholder="Enter Phone Number" id="phoneNumber" />
                                </div>
                                </div>
                            <div class="row no-margin no-padding">
                                <div class="col">
                                    <label for="email">Email</label>
                                    <input type="text" class="form-control" placeholder="Enter Email" id="email" />
                                </div>
                                <div class="col">
                                    <label for="tin">Tax Identification Number <span class="grey-tip">(optional)</span></label>
                                    <input type="text" class="form-control" placeholder="Enter TIN" id="tin" />
                                </div>
                            </div>
                            <div class="row no-margin no-padding">
                                <div class="col">
                                    <label for="rcNumber">RC Number</label>
                                    <input type="text" class="form-control" placeholder="Enter RC Number" id="rcNumber" />
                                </div>
                                <div class="col">
                                    <label for="state">State</label>
                                    <input type="text" class="form-control" placeholder="Select State" id="state" list="states" spellcheck="false" autocomplete="off"/>
                                    <datalist name="states" id="states">
                                        <option data-value="Lagos" value="Lagos">Lagos</option>
                                    </datalist>
                                </div>
                            </div>
                            <div class="row no-margin no-padding">
                                <div class="col">
                                    <label for="lga">Local Government Area</label>
                                    <input type="text" class="form-control" placeholder="Select LGA" id="lga" list="lgas" spellcheck="false" autocomplete="off"/>
                                    <datalist name="lgas" id="lgas">
                                        <option data-value="Yaba" value="yaba">Yaba</option>
                                    </datalist>
                                </div>
                                <div class="col">
                                    <label for="address">Address</label>
                                    <input type="text" class="form-control" placeholder="Enter Address" id="address" />
                                </div>
                            </div>
                            <div class="container-fluid">
                                <button type="button" class="btn">Save Changes</button>
                            </div>
                            </form>
                    </div>
                    </div>
            </div>
        </div>
    </div>



    @Html.Partial("Partials\\FooterPartial")
</div>

