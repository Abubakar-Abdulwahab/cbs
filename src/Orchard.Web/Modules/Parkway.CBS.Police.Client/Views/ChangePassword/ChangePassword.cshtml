@model Parkway.CBS.Core.HelperModels.ChangePasswordModel

@{
    Layout.Title = "Change Password";

    Script.Require("CBS.Popper.Script").AtFoot();
    Script.Require("CBS.Bootstrap4.Script").AtFoot();

    Style.Require("CBS.Bootstrap");
    Style.Require("CBS.NPF.Main");
}

<div id="user-profile-security-content-one">
    @Html.Partial("Partials\\HeaderPartial", Model.HeaderObj)
    <div class="container-fluid user-profile-security-main-content no-margin no-padding">

        <div class="container-fluid user-profile-security-container no-padding">
            <div class="px-2">
                @if (Model.FlashObj != null)
                {
                    @Html.Partial("Partials\\Flash", Model.FlashObj)
                }
            </div>
            <div class="container user-profile-security-form-container px-0">
                <div class="container-fluid">
                    <h4>User Profile</h4>
                </div>
                <div class="row no-margin no-padding user-profile-security-outer-row">
                    <div class="container-fluid user-profile-security-nav-container">
                        @Html.Partial("Partials\\SecurityNavBarPartial", Model.HeaderObj)
                    </div>
                    <div class="container-fluid no-margin no-padding user-profile-security-content change-password-content-container">
                        <div class="container-fluid no-margin no-padding">
                            <h4>Change Password</h4>
                        </div>
                        @using (Html.BeginRouteForm("P.ChangePassword", FormMethod.Post, new { @id = "changePasswordForm", @name = "changePasswordForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group no-padding">
                                    <label for="oldPwd">Old Password</label>
                                    <input type="password" class="form-control" placeholder="Enter Old Password" id="oldPwd" required name="OldPassword" />
                                    <div class="container no-padding validation-msg">@Html.ValidationMessage("OldPassword", new { @class = "tiny-caption", @style = "color:#ff0000" })</div>
                            </div>
                            <div class="form-group no-padding">
                                    <label for="newPwd">New Password</label>
                                    <input type="password" class="form-control" placeholder="Enter New Password" id="newPwd" required name="NewPassword" />
                                    <div class="container no-padding validation-msg">@Html.ValidationMessage("NewPassword", new { @class = "tiny-caption", @style = "color:#ff0000" })</div>
                            </div>
                            <div class="form-group no-padding">
                                    <label for="confirmNewPwd">Confirm New Password</label>
                                    <input type="password" class="form-control" placeholder="Enter New Password" id="confirmNewPwd" required name="ConfirmNewPassword" />
                                    <div class="container no-padding validation-msg">@Html.ValidationMessage("ConfirmNewPassword", new { @class = "tiny-caption", @style = "color:#ff0000" })</div>
                            </div>
                            <div class="container-fluid no-margin no-padding">
                                <button type="submit" class="btn btn-block">Save Changes</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("Partials\\FooterPartial")
</div>


