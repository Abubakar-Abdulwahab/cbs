@model Parkway.CBS.Police.Core.VM.NotificationMessageListVM
@{
    Layout.Title = "Notifications";

    Script.Require("CBS.Popper.Script").AtFoot();
    Script.Require("CBS.Bootstrap4.Script").AtFoot();
    Script.Require("CBS.MDA.BootstrapDatepicker.Script");
    Script.Require("PSS.DatePicker.Script");
    Script.Require("PSS.Notification.Message.List.Script");

    Style.Require("Style.Datepicker");
    Style.Require("CBS.Bootstrap");
    Style.Require("CBS.NPF.Main");
}
<style>
    .profileloader {
        border: 6px solid #f3f3f3;
        border-radius: 50%;
        border-top: 6px solid rgb(20, 158, 196);
        width: 30px;
        height: 30px;
        -webkit-animation: spin 2s linear infinite; /* Safari */
        animation: spin 1s linear infinite;
        position: absolute;
        margin: auto;
        left: 48%;
        bottom: 5%;
        display: none;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    @@-webkit-keyframes spin {
        0% {
            -webkit-transform: rotate(0deg);
        }

        100% {
            -webkit-transform: rotate(360deg);
        }
    }
</style>

<div>
    @Html.Partial("Partials\\HeaderPartial", Model.HeaderObj)
    <div class="container-fluid breadcrumb-nav">

        <ul class="nav justify-content-center escort-nav-list">
            <li class="nav-item">
                <span class="small-active-circle"></span>
                <a href="#" class="nav-link active-link">Notifications</a>
            </li>
            <li class="nav-item">
                <span style="float:right;transform:rotate(-90deg)"><img src="@Url.Content(Html.ThemePath(WorkContext.CurrentTheme,"/Styles/images/arrowDown.svg"))" class="right-arrow-icon" /></span>
            </li>
            <li class="nav-item">
                <span class="small-circle"></span>
                <a href="#" class="nav-link">Details</a>
            </li>
        </ul>
        <div class="container-fluid active-center-link-container"><a href="#" class="active-center-link">Notifications</a></div>
    </div>

    <div class="notification-message-list-body">
        @Html.Partial("Partials\\NotificationMessage\\NotificationMessageListPartial")
        @Html.Partial("Partials\\NotificationMessage\\NotificationMessageContentPartial")
    </div>

    @Html.Partial("Partials\\FooterPartial")
</div>

