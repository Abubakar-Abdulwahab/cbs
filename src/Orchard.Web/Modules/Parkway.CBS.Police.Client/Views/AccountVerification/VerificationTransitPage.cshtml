@model Parkway.CBS.Core.HelperModels.VerifyAccountModel

@{
    Layout.Title = "Verified Account";

    Script.Require("CBS.Popper.Script").AtFoot();
    Script.Require("CBS.Bootstrap4.Script").AtFoot();

    Style.Require("CBS.Bootstrap");
    Style.Require("CBS.NPF.Main");
    Script.Require("CBS.ExternalInvoiceGeneration.Script").AtFoot();
}

<div id="verify-account-one">
    @Html.Partial("Partials\\HeaderPartial", Model.HeaderObj)
    <div class="container-fluid verified-account-main-content no-margin no-padding">
        <div class="container verified-account-content-container">
            <div class="container verified-account-content no-padding">
                <div class="container no-padding">
                    <div class="container-fluid no-padding">
                        <img src="@Url.Content(Html.ThemePath(WorkContext.CurrentTheme,"/Styles/images/verifiedIcon.svg"))" class="img img-responsive">
                    </div>
                    <div class="container-fluid no-padding">
                        @if (Model.Redirecting)
                        {
                            <h4>Account Verified!</h4>
                            <p>Your account has been successfully verified.</p>
                            <h3>Redirecting<small id="progressDots"></small></h3>
                        }
                        else
                        {
                            <h3>Redirect Link Error</h3>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("Partials\\FooterPartial")
</div>
<script>
    var redirecting = @Html.Raw(Json.Encode(Model.Redirecting));
    var url = @Html.Raw(Json.Encode(Model.URL));
</script>