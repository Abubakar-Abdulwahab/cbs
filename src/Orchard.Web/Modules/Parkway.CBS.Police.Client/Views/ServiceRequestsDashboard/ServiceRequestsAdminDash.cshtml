@using Parkway.CBS.Core.HelperModels
@{
    Layout.Title = "ServiceRequestsAdminDash";

    Script.Require("CBS.Popper.Script").AtFoot();
    Script.Require("CBS.Bootstrap4.Script").AtFoot();
    Script.Require("PSS.Select.Service.Script").AtFoot();
    Script.Require("CBS.MDA.BootstrapDatepicker.Script");
    Script.Require("PSS.DatePicker.Script");
    Style.Require("Style.Datepicker");
    Style.Require("CBS.Bootstrap");
    Style.Require("CBS.NPF.Main");
}


<div id="service-requests-dash-one">
    @Html.Partial("Partials\\HeaderPartial", new HeaderObj { })

    <div class="container-fluid service-requests-dash-main-content no-margin no-padding">

        <div class="container-fluid service-requests-dash-content-container">
            <div class="container service-requests-dash-content no-padding no-margin">
                <div class="row no-padding no-margin">
                    <div class="col-2 serv-req-nav-container no-padding">
                        <ul class="nav flex-column">
                            <li class="nav-item active"><a class="nav-link" href="#">Approvals</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Collection Report</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Police Commands</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">User Management</a></li>
                        </ul>
                    </div>
                    <div class="col-10">
                        <div class="container-fluid serv-req-content-container no-padding">
                            <div class="container-fluid">
                                <h5>Service Requests</h5>
                                </div>
                            <div class="container-fluid req-filters">
                                <div class="dropdown date-filter-container">
                                <input class="form-control date-filter dropdown-toggle" style="background-color:#FFFFFF" data-toggle="dropdown" type="text" placeholder="Filter By: Date, Status " readonly/>
                                    <div>
                                        <div class="dropdown-menu">
                                            <div class="custom-dropdown-item no-padding">
                                                <div class="container-fluid no-margin no-padding">Date</div>
                                                <div class="row no-margin no-padding">
                                                    <div class="col-5 no-margin no-padding"><input class="form-control pickyDate" placeholder="Start Date"/></div>
                                                    <div class="col-2 no-margin no-padding">-</div>
                                                    <div class="col-5 no-margin no-padding"><input class="form-control pickyDate" placeholder="End Date"/></div>
                                                </div>
                                            </div>
                                            <div class="custom-dropdown-item no-padding">
                                            <div class="container-fluid no-margin no-padding">Status</div>
                                            <div class="row no-margin no-padding">
                                                <div class="col-8 no-padding">
                                                    <input type="text" class="form-control" placeholder="select status" autocomplete="off" list="statuses" spellcheck="false"/>
                                                <datalist id="statuses" >
                                                    <option selected>Select Status</option>
                                                    </datalist>
                                                </div>
                                            </div>
                                                </div>
                                        </div>
                                    </div>
                                </div>
                                <input class="form-control info-filter" type="text" placeholder="Search by Customer name, Invoice No, Receipt No"/>
                            </div>
                            <div class="container-fluid">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Name</th>
                                            <th>Invoice No.</th>
                                            <th>Revenue Head</th>
                                            <th>Receipt No.</th>
                                            <th>Status</th>
                                            <th>Action By</th>
                                            <th>Action Date</th>
