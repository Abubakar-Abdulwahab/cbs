@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
  <title>Receipt</title>
</head>

<body>
  <table class="receipt" style="font-family: Open Sans, sans-serif;width: 792px;font-size: 12px;border-collapse: collapse;margin: 50px auto 0;border-bottom: 2px solid #03b685;">
    <tr>
      <td class="banner" style="padding: 0;width: 400px;height: 120px;background-color: #03b685;background-image: linear-gradient(107deg, #03b685, #026e42);">
        <table style="font-family: Open Sans, sans-serif;width: 100%;font-size: 12px;border-collapse: collapse;">
          <tr>
            <!-- The logo path has to be absolute path -->
            <td align="left" width="109" style="padding: 10px;"><img src="@Model.ReceiptLogoUrl" width="83px" alt="" /></td>
            <td align="right">
              <table style="width: 97%;">
                <tr style="color: white;">
                  <td align="right" style="color: white;" >
                      <span style="color: white; margin-right: 20px; padding-right: 20px;font-size: 12px;">RECEIPT NO: @Model.ReceiptNumber</span>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
      </td>
    </tr>
    <tr>
      <td class="payer-info" style="padding: 0;">
        <table style="font-family: Open Sans, sans-serif;width: 100%;font-size: 12px;border-collapse: collapse;">
          <tr>
            <td class="title-cell" style="padding: 5px 10px;width: 70px;"><strong>Payer Info</strong></td>
            <td style="padding: 0;">
              <table class="line" style="font-family: Open Sans, sans-serif;width: 100%;font-size: 0;border-collapse: collapse; max-height: 1px; border-bottom: 1px solid #03b685">
                  <tr>
                    <td>&nbsp;</td>
                  </tr>
              </table>
            </td>
          </tr>
        </table>
      </td>
    </tr>
    <tr>
      <td class="info-table-container" style="padding: 5px 5px;">
        <table class="info-table" style="font-family: Open Sans, sans-serif;width: 100%;font-size: 12px;border-collapse: separate;border-spacing: 0 2px;">
          <tr style="background: #f6fcfa;">
            <td class="pl" width="120" style="padding: 5px;min-height: 30px;padding-left: 10px !important; width: 120px;">Name:</td>
            <td style="padding: 5px;min-height: 30px;">@Model.TaxPayerName</td>
          </tr>
          <tr style="background: #f6fcfa;">
            <td class="pl" style="padding: 5px;min-height: 30px;padding-left: 10px !important;">Email:</td>
            <td style="padding: 5px;min-height: 30px;">@Model.TaxPayerEmail</td>
          </tr>
          <tr style="background: #f6fcfa;">
            <td class="pl" style="padding: 5px;min-height: 30px;padding-left: 10px !important;">Phone No.:</td>
            <td style="padding: 5px;min-height: 30px;">@Model.TaxPayePhoneNumber</td>
          </tr>
          <tr style="background: #f6fcfa;">
            <td class="pl" style="padding: 5px;min-height: 30px;padding-left: 10px !important;">MDA:</td>
            <td style="padding: 5px;min-height: 30px;">@Model.MDAName</td>
          </tr>
          <tr style="background: #f6fcfa;">
            <td class="pl" style="padding: 5px;min-height: 30px;padding-left: 10px !important;">TIN:</td>
            <td style="padding: 5px;min-height: 30px;">@Model.TaxPayerTIN</td>
          </tr>
          <tr style="background: #f6fcfa;">
            <td class="pl" style="padding: 5px;min-height: 30px;padding-left: 10px !important;">Address:</td>
            <td style="padding: 5px;min-height: 30px;">@Model.TaxPayerAddress</td>
          </tr>
          <tr style="background: #f6fcfa;">
            <td style="padding: 5px;min-height: 30px;"><div style="min-height: 20px;">&nbsp;</div></td>
            <td style="padding: 5px;min-height: 30px;"><div style="min-height: 20px;"></div></td>
          </tr>
        </table>
      </td>
    </tr>
    <tr>
        <td class="payer-info" style="padding: 0;">
          <table style="font-family: Open Sans, sans-serif;width: 100%;font-size: 12px;border-collapse: collapse;">
            <tr>
              <td style="padding: 0;">
              <table class="line" style="font-family: Open Sans, sans-serif;width: 100%;font-size: 0;border-collapse: collapse; max-height: 1px; border-bottom: 1px solid #03b685">
                  <tr>
                    <td>&nbsp;</td>
                  </tr>
              </table>
              </td>
              <td class="title-cell" align="right" style="padding: 5px 10px;width: 70px;"><strong>Billing Info</strong></td>
            </tr>
          </table>
        </td>
    </tr>
    <tr>
      <td style="padding: 0;">
        <table style="font-family: Open Sans, sans-serif;width: 100%;font-size: 12px;border-collapse: collapse;">
          <tr>
            <td class="info-table-container billing" style="padding: 5px 5px;">
              <table class="info-table" style="font-family: Open Sans, sans-serif;width: 100%;font-size: 12px;border-collapse: separate;border-spacing: 4px 2px;">
                <tr style="background: #f6fcfa;">
                  <td align="left" style="padding: 5px;min-height: 30px;"><span style="font-weight: 600;">Description</span></td>
                  <td align="right" width="120" style="padding: 5px;min-height: 30px; width: 120px"><span style="font-weight: 600;">Price</span></td>
                </tr>
                <tr style="background: #f6fcfa;">
                  <td align="left" style="padding: 5px;min-height: 30px;">@Model.RevenueHeadName</td>
                  <td align="right" style="padding: 5px;min-height: 30px;">@Model.AmountPaid</td>
                </tr>
                <tr style="background: #f6fcfa;">
                  <td style="padding: 5px;min-height: 30px;">
                    <div style="min-height: 50px;">&nbsp;</div>
                  </td>
                  <td style="padding: 5px;min-height: 30px;">
                    <div style="min-height: 50px;"></div>
                  </td>
                </tr>
                <tr style="background: #f6fcfa;">
                  <td align="right" bgcolor="ffffff" style="font-weight: 600;padding-right: 10px;padding: 5px;min-height: 30px;">TOTAL</td>
                  <td align="right" style="padding: 5px;min-height: 30px;"><strong>@Model.AmountPaid</strong></td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
      </td>
    </tr>
    <tr>
      <td align="center" style="padding-top: 100px;color: #1f1f20;font-weight: 300;font-size: 10px;padding: 0;">
        This receipt was generated @DateTime.Now.ToString("MMM d, yyyy @ HH:mm:ss") on Nasarawa Central Billing System
      </td>
    </tr>
  </table>

  <style>
    table {
      font-family: Open Sans, sans-serif;
      width: 100%;
      font-size: 12px;
      border-collapse: collapse;
    }
  </style>
</body>

</html>
