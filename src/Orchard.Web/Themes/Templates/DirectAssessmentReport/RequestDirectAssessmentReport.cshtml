<!DOCTYPE html>
<html>
<head>
    <title></title>
    <style>
        body, td, th, div, p {
            font-family: 'Open Sans', Arial;
            font-size: 8px;
            direction: ltr;
            line-height: 1.65;
        }

        body {
            color: #000;
            padding: 0px !important;
            margin: 0px !important;
            background-color: #fff;
            display: block;
        }

        .container {
            position: relative;
            margin-right: 0;
            margin-left: 0;
            padding-left: 5px;
            padding-right: 5px;
        }

        p {
            padding-top: 10px;
            line-height: 1.85;
        }

        .bold {
            font-weight: 600;
        }

        .bolder {
            font-weight: 800;
        }

        .no-padding {
            padding: 0;
        }

        .no-margin {
            margin: 0;
        }

        .no-border {
            border: none;
        }

        .border-left {
            border: 0;
            border-color: #999999;
            border-left-color: #999999;
            border-left-width: 1px;
            border-left-style: solid;
        }

        .border-right {
            border: 0;
            border-color: #999999;
            border-right-color: #999999;
            border-right-width: 1px;
            border-right-style: solid;
        }

        .border-bottom {
            border: 0;
            border-color: #999999;
            border-bottom-color: #999999;
            border-bottom-width: 1px;
            border-bottom-style: solid;
        }

        .border-top {
            border: 0;
            border-color: #999999;
            border-top-color: #999999;
            border-top-width: 1px;
            border-top-style: solid;
        }

        td {            
            vertical-align: top;
            text-transform:capitalize;
        }
    </style>
</head>
<body>
    <div class="container">
        <table style="width:100%;">
            <tbody>
                <tr>
                    <!-- The logo path has to be absolute path -->
                    <td align="center" style="padding: 10px;"><img src="@Model.LogoURL" width="83px" alt="" /></td>
                </tr>
            </tbody>
        </table>
        <table style="width:100%;">
            <tbody>
                <tr>
                    <td align="center" style="padding: 10px;font-size:12px;"><strong>@Model.TenantName Central Billing System Direct Assessment Report</strong></td>
                </tr>
            </tbody>
        </table>
        <p>
            <table style="width:100%;" cellpadding="3" cellspacing="0">
                <tbody>
                    <tr style="font-weight: bold">
                        <td class="border-top border-bottom" nowrap style="white-space: nowrap; width:13%;">Assessment Date</td>
                        <td class="border-top border-bottom" style="width:12%;"> Payer Name</td>
                        <td class="border-top border-bottom" style="width:16%;">State TIN</td>
                        <td class="border-top border-bottom" style="width:16%;">Invoice Amount</td>
                        <td class="border-top border-bottom" style="width:16%;"> Invoice No</td>
                        <td class="border-top border-bottom" style="width:20%;"> Invoice Status</td>
                        <td class="border-top border-bottom" style="width:10%;">  Tax Period</td>
                        <td class="border-top border-bottom" style="width:10%;">Assessment Type</td>
                        <td class="border-top border-bottom" style="width:10%;">Assessment By</td>
                        <td class="border-top border-bottom" style="width:10%;">Assessment Comment</td>
                    </tr>
                    @foreach (var item in Model.DirectAssessmentReportItems)
                    {
                        <tr>
                            <td class="border-top">@item.AssessmentDate.ToString("dd MMM yyyy")</td>
                            <td class="border-top">@item.PayerName</td>
                            <td class="border-top">@item.StateTIN</td>
                            <td class="border-top">@string.Format("{0:n2}", item.InvoiceAmount)</td>
                            <td class="border-top">@item.InvoiceNo</td>
                            <td class="border-top">@item.InvoiceStatusDescription</td>
                            <td class="border-top">@item.TaxPeriod</td>
                            <td class="border-top">@item.DirectAssessmentType</td>
                            <td class="border-top">@item.AssessedBy</td>
                            <td class="border-top">@item.Comments</td>
                        </tr>
                    }
                    <tr><td colspan="10" class="border-top">&nbsp;</td></tr>
                </tbody>
            </table>
        </p>
        <p style="text-align:center; padding-top:5px;">
            <i>This report was generated @DateTime.Now.ToString("MMM d, yyyy @ HH:mm:ss") on @Model.TenantName Central Billing System</i><br />
        </p>
    </div>
</body>
</html>