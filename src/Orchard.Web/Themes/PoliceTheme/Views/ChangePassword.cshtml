@model dynamic

@{ 
    Layout.Title = Html.TitleForPage(T("Change Password").ToString());
}


<div class="col-sm-offset-3 col-sm-6 well well-sm logreg">
    <h3>@T("Change Password").ToString()</h3>
    <p class="small" style="color:#428bca">@T("New passwords are required to be a minimum of {0} characters in length.", ViewData["PasswordLength"])</p>
    <hr />
    @using (Html.BeginFormAntiForgeryPost(Url.Action("ChangePassword"), FormMethod.Post, new { @class = "form-horizontal" }))
        {

            @Html.ValidationSummary(true, T("Password change was unsuccessful. Please correct the errors and try again.").ToString(), new { @class = "alert alert-danger alert-dismissable fade in" })

            <div class="form-group">
            @*<label for="userName-email" class="col-sm-2 control-label">@T("Username")</label>*@
            <div class="col-sm-12 login-form">
                @Html.Password("currentPassword", string.Empty, new { id = "currentPassword", @class = "form-control", autofocus = "autofocus", placeholder = "Current Password" })
                @Html.ValidationMessage("currentPassword", new { @class = "small red" })
            </div>
        </div>

        <div class="form-group">
            @*<label for="userName-email" class="col-sm-2 control-label">@T("Username")</label>*@
            <div class="col-sm-12 login-form">
                @Html.Password("newPassword", string.Empty, new { id = "newPassword", @class = "form-control", autofocus = "autofocus", placeholder = "New Password" })
                @Html.ValidationMessage("newPassword", new { @class = "small red" })
            </div>
        </div>

        <div class="form-group">
            @*<label for="password" class="col-sm-2 control-label">@T("Password")</label>*@
            <div class="col-sm-12 login-form">
                @Html.Password("confirmPassword", string.Empty, new { id = "confirmPassword", @class = "form-control", placeholder = "Confirm Password", autofocus = "autofocus" })
                @Html.ValidationMessage("confirmPassword", new { @class = "small red" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-4">
                        <button type="submit" class="btn btn-primary btn-block">@T("Change Password")</button>
                    </div>
                    <div class="col-sm-3">
                        <button type="reset" class="btn btn-default btn-block">@T("Reset")</button>
                    </div>
                </div>
            </div>
        </div>
    }

</div>